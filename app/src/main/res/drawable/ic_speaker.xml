<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <stroke
                        android:color="#00c300"
                        android:width="1dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_speaker_on_foreground"
                android:top="18dp"
                android:bottom="18dp"
                android:left="18dp"
                android:right="18dp" />
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <stroke
                        android:color="#eee"
                        android:width="1dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_speaker_off_foreground"
                android:top="18dp"
                android:bottom="18dp"
                android:left="18dp"
                android:right="18dp"/>
        </layer-list>
    </item>


</selector>
